<ul class="podlove-contributors">
{% for contributor in episode.contributors %}
	{% if contributor.visible %}
		<li>
			{% if avatars == "yes" %}
				<span class="avatar">{{ contributor.avatar(18) }}</span>
			{% endif %}
			<span class="name">{{ contributor.name }}</span>
		</li>
	{% endif %}
{% endfor %}
</ul>